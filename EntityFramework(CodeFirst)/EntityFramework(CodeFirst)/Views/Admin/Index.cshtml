@model IEnumerable<EntityFramework_CodeFirst_.Models.Kontakt>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Stwórz nowy", "Stworz")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NowePole)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pytanie)
        </th>
