    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NowePole)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pytanie)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edytuj", new { id=item.KontaktId }) |
            @Html.ActionLink("Szczegóły", "Szczegoly", new { id=item.KontaktId }) |
            @Html.ActionLink("Usuń", "Usun", new { id=item.KontaktId })
